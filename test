pipeline{
     agent {
	     node{
		  label 'master'
	 }
 }
	  stages {
		    stage('terraform started'){
			  steps{
			      sh 'echo "terraform start....!"'
			  }
			}
			stage('change folder'){
			  steps{
			      sh 'cd /var/lib/jenkins/workspace'
				  sh 'echo "Changing folder....!"'
			  }
			}
			stage('Remove folder'){
			  steps{
			      sh 'cd /var/lib/jenkins/workspace'
			      sh 'rm -rf *'
				  sh 'echo "Remove folder....!"'
			  }
			}
			stage('Git clone'){
			  steps{
			     sh 'git clone https://github.com/selvakann/devops.git'
		       	     sh 'cd /var/lib/jenkins/workspace/second-job/devops/hasipcorp'
			  }
			}
			
		    stage('terraform init'){
			  steps{
            			sh 'cp /var/lib/jenkins/workspace/second-job/devops/hasipcorp/*.tf /home/ec2-user/temp/'
				sh 'cd /home/ec2-user/'
				sh 'chown ec2-user:ec2-user /home/ec2-user/temp'
				sh 'terraform init -input=false'
			       }
			}
		    
		
	
}	
}
